<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background_login2">
    <ImageView
        android:id="@+id/imgBack"
        android:layout_margin="25dp"
        android:src="@drawable/back"
        android:layout_width="30dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:id="@+id/loginPanel"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:layout_marginTop="80dp">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="欢迎注册省省"
            android:textSize="25dp" />



        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/postImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/morentouxiang"/>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="点击上传头像" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:text="用 户 名:"
                android:textSize="20dp"
                />
            <EditText
                android:id="@+id/Rusername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:background="@drawable/qq_edit_login"
                android:hint="请输入您的用户名"
                android:ems="10" >

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:text="密      码:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/Rpassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:background="@drawable/qq_edit_login"
                android:hint="请输入您的密码"
                android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:inputType="textPassword"
                android:maxLength="9"
                android:ems="10" />
        </LinearLayout>



            <Button
                android:id="@+id/register"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="注  册"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:background="@drawable/background_button_div"/>

    </LinearLayout>

</RelativeLayout>